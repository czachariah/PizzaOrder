<!-- The background pane that holds the whole Stage together. -->

<Pane id="MainBackground" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="740.0" prefWidth="972.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainStageController">
    <!-- This grid will hold the top of the GUI: Choosing Pizza and Size Drop-Down Menus and the Pizza Pictures -->
