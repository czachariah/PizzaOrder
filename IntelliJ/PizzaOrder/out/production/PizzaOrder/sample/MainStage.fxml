             <Button fx:id="RemoveToppingButton" mnemonicParsing="false" onAction="#removeToppings" prefHeight="37.0" prefWidth="147.0" text="&lt;&lt; Remove Topping" GridPane.columnIndex="0" GridPane.rowIndex="1">
