<!-- The background pane that holds the whole Stage together. -->


<Pane id="MainBackground" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <!-- This grid will hold the top of the GUI: Choosing Pizza and Size Drop-Down Menus and the Pizza Pictures -->
    <GridPane id="TopGrid" prefHeight="233.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="313.0" minWidth="10.0" prefWidth="295.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="304.0" minWidth="10.0" prefWidth="299.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <!-- Grid to hold the Drop-Down Menus -->
          <GridPane id="DropDownAndPicGrid" prefHeight="159.0" prefWidth="291.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints maxHeight="56.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="102.0" minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="105.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="129.0" minHeight="10.0" prefHeight="79.0" vgrow="SOMETIMES" />
              </rowConstraints>

              <!-- Pizza Type -->
              <Label id="PizzaTypeLabel" text="Pizza Type:" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane.margin>
               <Insets left="55.0" top="10.0" />
            </GridPane.margin>
            <font>
               <Font size="18.0" />
            </font></Label>
              <ComboBox id="PizzaTypeDropDown" prefHeight="27.0" prefWidth="180.0" visibleRowCount="3" GridPane.columnIndex="0" GridPane.rowIndex="1" >
                  <GridPane.margin>
                      <Insets bottom="20.0" left="55.0" />
                  </GridPane.margin>
                  <items>
                      <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Deluxe" />
                          <String fx:value="Hawaiian"/>
                          <String fx:value="Build Your Own"/>
                      </FXCollections>
                  </items>
                  <value>
                      <String fx:value="Build Your Own"/>
                  </value>
              </ComboBox>

              <!-- Pizza Size -->
              <Label id="PizzaSizeLabel" prefHeight="28.0" prefWidth="91.0" text="Pizza Size:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                  <GridPane.margin>
                      <Insets left="55.0" top="10.0" />
                  </GridPane.margin>
                  <font>
                      <Font size="18.0" />
                  </font></Label>
              <ComboBox id="PizzaSizeDropDown" prefHeight="27.0" prefWidth="180.0" visibleRowCount="3" GridPane.columnIndex="0" GridPane.rowIndex="3">
                  <GridPane.margin>
                      <Insets bottom="20.0" left="55.0" />
                  </GridPane.margin>
                  <items>
                      <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Small (10&quot;)" />
                          <String fx:value="Medium (12&quot;)"/>
                          <String fx:value="Large (14&quot;)"/>
                      </FXCollections>
                  </items>
                  <value>
                      <String fx:value="Medium (12&quot;)"/>
                  </value>
              </ComboBox>

          </GridPane>

        <!-- Image of the Type of Pizza -->
          <ImageView id="PizzaImage" fitHeight="217.0" fitWidth="291.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <GridPane.margin>
               <Insets left="5.0" />
            </GridPane.margin>
         <image>
            <Image url="@Build-your-own-pizza.jpg" />
         </image>
          </ImageView>
    </GridPane>
    <Separator id="TopSeparator" layoutY="228.0" prefHeight="11.0" prefWidth="650.0" />
</Pane>
